{
    "name": "oas-php/resolver",
    "description": "JSON Reference resolver",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kuba Biernacki",
            "email": "kubiernacki@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "psr/http-factory": "^1.0",
        "psr/simple-cache": "^1.0",
        "nikic/iter": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "OAS\\Resolver\\": "src/"
        },
        "files" : [
            "src/functions.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "guzzlehttp/psr7":"^1.1",
        "cache/array-adapter": "^1.0",
        "symfony/yaml": "^5.1",
        "oas-php/sample": "dev-master"
    },
    "suggest": {
        "guzzlehttp/psr7": "For working with URI's require \"guzzlehttp/psr7:^1.1",
        "cache/array-adapter": "For caching require \"cache/array-adapter:^1.0",
        "symfony/yaml": "For decoding YAML documens require \"symfony/yaml:^5.1"
    }
}
